@model Tarot.Model.EF.Feedback
@using (Html.BeginForm("CreateFeedback", "Contact", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card-body card-block" style="color: black;">
        <form id="contactForm">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Họ và Tên", @style="width:100%" })
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Email", @style = "width:100%" })
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Số điện thoại", @style = "width:100%" })
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Phản hồi của khách hàng", @rows = "4", @style = "width:100%" })
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="submit-button text-center">
                        <button class="btn hvr-hover" id="submit" type="submit" style="background-color: mediumaquamarine;width:24%">GỬI ĐI</button>
                        <div id="msgSubmit" class="h3 text-center hidden"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </form>
    </div>
}
